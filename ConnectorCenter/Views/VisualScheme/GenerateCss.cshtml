@model ConnectorCenter.Views.VisualScheme.GenerateCssModel
@{

}

.col-4{
    margin:0px;
    padding:2px;
}
.col-2{
    margin:0px;
    padding:2px;
}
.col-3{
    margin:0px;
    padding:2px;
}

html {
  position: relative;
  min-height: 100%;
  min-width: 100%;
}

body {
    background: linear-gradient(20deg, @Model.Scheme.ColorScheme.Fone,
        @Model.Scheme.ColorScheme.SubAccent,
        @Model.Scheme.ColorScheme.Fone,
        @Model.Scheme.ColorScheme.SubAccent,
        @Model.Scheme.ColorScheme.Fone)

}

.panel {
    background: @Model.Scheme.ColorScheme.Panel;
    border-radius: 10px;
    width: 100%;
    height:100%;
}
.panelButton {
    outline: none;
    border-color: transparent;
    background: @Model.Scheme.ColorScheme.Panel;
    border-radius: 10px;
    margin: 0px;
    width: 100%;
    height:100%;
    box-shadow: 0px 0px 0px @Model.Scheme.ColorScheme.Select;
    transition: margin linear 350ms;
    transition: box-shadow linear 150ms;
}
.panelButton:hover {
    transition: margin linear 350ms;
    transition: box-shadow linear 150ms;
    margin: 1px;
    box-shadow: 0px 0px 30px @Model.Scheme.ColorScheme.Select;
}
.path{
    fill: @Model.Scheme.ColorScheme.Path;
    box
}

.button{
    background: @Model.Scheme.ColorScheme.Panel;
    Color: @Model.Scheme.ColorScheme.Text;
    border-radius: 5px;
    border: 1px solid @Model.Scheme.ColorScheme.Border;
    padding:  5px 20px 5px 20px;
    box-shadow: none;
    max-height: 5vh;
    font-size: calc(2vh * @Model.Scheme.FontScheme.FontMultiplierPercent / 100);
    font-family: @Model.Scheme.FontScheme.Font;
    color: @Model.Scheme.ColorScheme.Text;
}
.button:hover {
    transition: border-color linear 150ms;
    border-color: @Model.Scheme.ColorScheme.SubAccent;
}

.iconButton{
    background: @Model.Scheme.ColorScheme.Panel;
    Color: @Model.Scheme.ColorScheme.Text;
    border: 1px solid @Model.Scheme.ColorScheme.Border;
    padding:  0px;
    box-shadow: none;
    width: 4vh;
    border-radius: 2vh;
    height: 4vh;
    color: @Model.Scheme.ColorScheme.Path;
}
.iconButton:hover {
    transition: border-color linear 150ms;
    border-color: @Model.Scheme.ColorScheme.SubAccent;
}

.text{
    color: @Model.Scheme.ColorScheme.Text;
    font-family: @Model.Scheme.FontScheme.Font;
    font-size: calc(2vh * @Model.Scheme.FontScheme.FontMultiplierPercent / 100);
}
.textLogo{
    color: @Model.Scheme.ColorScheme.Text;
    font-family: @Model.Scheme.FontScheme.Font;
    font-size: calc(3vh * @Model.Scheme.FontScheme.FontMultiplierPercent / 100);
}
.textMin{
    color: @Model.Scheme.ColorScheme.Text;
    font-family: @Model.Scheme.FontScheme.Font;
    font-size: calc(1.5vh * @Model.Scheme.FontScheme.FontMultiplierPercent / 100);
}
.textLogoMainMenu{
    font-size: calc(3vh * @Model.Scheme.FontScheme.FontMultiplierPercent / 100);
}
.textbox{
    color: @Model.Scheme.ColorScheme.Text;
    background: transparent;
    border-width: 0 0 1px 0;
    border-color: @Model.Scheme.ColorScheme.Border;
    font-family: @Model.Scheme.FontScheme.Font;
    font-size: calc(2vh * @Model.Scheme.FontScheme.FontMultiplierPercent / 100);
}
.textbox:focus{
    outline: none;
    transition: border-color linear 150ms;
    border-color: @Model.Scheme.ColorScheme.Accent;
}
.isError{
    color: @Model.Scheme.ColorScheme.Error;
}
.isDisable{
    backGround: @Model.Scheme.ColorScheme.Disable;
}
.separator{
    background: @Model.Scheme.ColorScheme.Border;
}

select {
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    appearance: none;
    outline: 0;
    border: 0 !important;
    background: @Model.Scheme.ColorScheme.Panel;
    background-image: none;
    flex: 1;
    padding: 0 .5em;
    color: @Model.Scheme.ColorScheme.Text;
    cursor: pointer;
    font-size: calc(2vh * @Model.Scheme.FontScheme.FontMultiplierPercent / 100);
    font-family: @Model.Scheme.FontScheme.Font;
}

    select::-ms-expand {
        display: none;
    }

.select {
    position: relative;
    display: flex;
    line-height: 4vh;
    overflow: hidden;
    background: @Model.Scheme.ColorScheme.Border;
    padding: 1px;
    font-size: calc(2vh * @Model.Scheme.FontScheme.FontMultiplierPercent / 100);
    text-align:center;
    border-radius: 4px;
    border: 0px 0px 1px 0px solid @Model.Scheme.ColorScheme.Border;
    color: @Model.Scheme.ColorScheme.Path;

}

    .select::after {
        content: '\25BC';
        position: absolute;
        top: 0;
        right: 0;
        padding: 0 1em;
        cursor: pointer;
        pointer-events: none;
        transition: .25s all ease;
    }

    .select:hover::after {
        color: @Model.Scheme.ColorScheme.SubAccent;
    }

    ::-webkit-scrollbar {
    width: 5px;
    height: 5px;
    cursor: pointer;
    border-radius: 10px;
}

::-webkit-scrollbar-track {
    margin: 2vh 0px 2vh 0px;
    -webkit-box-shadow: inset 0 0 3px 2px rgba(0,0,0,0.3);
    background: @Model.Scheme.ColorScheme.Panel;
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    background: @Model.Scheme.ColorScheme.SubAccent;
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px @Model.Scheme.ColorScheme.Accent;
}

.scrollDiv{
    position:relative;
    height:100%;
    overflow:auto;
}
textarea {
    color: @Model.Scheme.ColorScheme.Text;
    font-size: calc(1.5vh * @Model.Scheme.FontScheme.FontMultiplierPercent / 100);
    background: @Model.Scheme.ColorScheme.Panel;
    border: 0px solid @Model.Scheme.ColorScheme.Border;
    outline: none;
    overflow: auto;
    resize: none;
}

.switch-toggle {
   font-size: calc(1.5vh * @Model.Scheme.FontScheme.FontMultiplierPercent / 100);
   border-radius: 10px;
   border: 1px solid @Model.Scheme.ColorScheme.Border;
   background: @Model.Scheme.ColorScheme.Panel;
}
.switch-toggle input {
  position: absolute;
  opacity: 0;
}
.switch-toggle input + label {
  padding: 7px;
  float:left;
  color: @Model.Scheme.ColorScheme.Text;
  cursor: pointer;
}
.switch-toggle input:checked + label {
  border-radius: 10px;
  border: 1px solid @Model.Scheme.ColorScheme.SubAccent;
}
.colorPicker{
    background: @Model.Scheme.ColorScheme.Panel;
    border-radius: 10px;
    border: 2px solid @Model.Scheme.ColorScheme.Border;
    color: @Model.Scheme.ColorScheme.Text;
    font-size: calc(1.7vh * @Model.Scheme.FontScheme.FontMultiplierPercent / 100);
    font-family: @Model.Scheme.FontScheme.Font;
}

