@model ConnectorCenter.Views.Login.IndexModel
@{
    Layout = "~/Views/Shared/ViewBase.cshtml";
}
@section Scripts{

}
    <div class="panel d-flex align-items-center">
        <div class="container flex " style="height:auto;">
            <!--Path-->
            <div class="row d-flex justify-content-center" style="height:30vh;min-width:30vh">
                    <svg style="height:30vh;width:30vh;" viewBox="0 0 24 24">
                        <path class="path" d="M18,11H14.82C14.4,9.84 13.3,9 12,9C10.7,9 9.6,9.84 9.18,11H6C5.67,11 4,10.9 4,9V8C4,6.17 5.54,6 6,6H16.18C16.6,7.16 17.7,8 19,8A3,3 0 0,0 22,5A3,3 0 0,0 19,2C17.7,2 16.6,2.84 16.18,4H6C4.39,4 2,5.06 2,8V9C2,11.94 4.39,13 6,13H9.18C9.6,14.16 10.7,15 12,15C13.3,15 14.4,14.16 14.82,13H18C18.33,13 20,13.1 20,15V16C20,17.83 18.46,18 18,18H7.82C7.4,16.84 6.3,16 5,16A3,3 0 0,0 2,19A3,3 0 0,0 5,22C6.3,22 7.4,21.16 7.82,20H18C19.61,20 22,18.93 22,16V15C22,12.07 19.61,11 18,11M19,4A1,1 0 0,1 20,5A1,1 0 0,1 19,6A1,1 0 0,1 18,5A1,1 0 0,1 19,4M5,20A1,1 0 0,1 4,19A1,1 0 0,1 5,18A1,1 0 0,1 6,19A1,1 0 0,1 5,20Z" />
                    </svg>
            </div>
            <!--Logo-->
            <div class="row d-flex text-center" style="height:auto">
                <h1 class="textLogo">ConnectorCenter</h1>
            </div>
            <!--Form-->
            <div class="row d-flex text-center" style="height:10vh;">
            @if (string.IsNullOrEmpty(Model.UserName))
            {
                <form action="/login/authorize" method="post">
                    <div class="container">
                        <div class="row d-flex justify-content-center">
                            <svg style="width:5vh;height:5vh" viewBox="0 0 24 24">
                                <path class="path" d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                            </svg>
                            <input  class="text-center textbox" type="text" name="Login" style="width:auto; min-width:20vh; margin:7px 2px"
                               required />
                        </div>
                        <div class="row d-flex justify-content-center">
                            <svg style="width:5vh;height:5vh" viewBox="0 0 24 24">
                                <path class="path" d="M12.67 13.67C12.2 14.13 11.63 14.5 11 14.73V23H8V21H5V18H8V14.72C6.26 14.1 5 12.46 5 10.5C5 8 7 6 9.5 6C9.54 6 9.57 6 9.6 6C9.13 6.95 8.92 8 9.03 9.08C8.44 9.28 8 9.84 8 10.5C8 11.33 8.67 12 9.5 12C9.73 12 9.95 11.94 10.15 11.85C10.79 12.69 11.67 13.32 12.67 13.67M20.73 19.44L17.97 20.6L17.19 18.76L14.43 19.93L13.26 17.16L16.03 16L14.76 13C12.91 13.08 11.11 12.05 10.35 10.25C9.39 7.96 10.47 5.32 12.76 4.35C13 4.25 13.26 4.18 13.5 4.12C12.84 2.87 11.5 2 10 2C7.79 2 6 3.79 6 6C6 6.08 6 6.16 6 6.24C5.7 6.5 5.4 6.82 5.15 7.15C5.06 6.78 5 6.4 5 6C5 3.24 7.24 1 10 1S15 3.24 15 6C15 7.42 14.4 8.67 13.45 9.57C13.87 10 14.5 10.13 15.08 9.88C15.85 9.56 16.2 8.68 15.88 7.92C15.85 7.83 15.8 7.74 15.74 7.66C15.9 7.13 16 6.58 16 6C16 5.37 15.9 4.76 15.72 4.19C17 4.55 18.1 5.44 18.65 6.76C19.41 8.56 18.89 10.57 17.5 11.81L20.73 19.44M13 8.6C13.37 8.19 13.65 7.71 13.82 7.18C13.28 7.45 12.97 8 13 8.6Z" />
                            </svg>
                            <input class="textbox text-center" type="password" name="Password" style="width:auto; min-width:20vh; margin:7px 2px"
                            required/>
                        </div>
                        <div class="row d-flex justify-content-center">
                            <input class="button" type="submit" value="Войти" style="width:auto; margin:5px; padding:5px 20px;" />
                        </div>
                    </div>
                    @if (!String.IsNullOrEmpty(Model.Message))
                    {
                        <label class="text text-center isError">@Model?.Message</label>
                    }
                </form>
            }
            else{
                
                    <div class="container">
                        <p class="text text-center">Вы авторизованы как 
                            @(string.IsNullOrEmpty(Model.UserName) 
                                ? "пользователь без имени"
                                : Model.UserName)
                        <p />
                        <div class="row d-flex justify-content-center">
                            <form action="/login/SignOut" method="post">
                                <input class="button" type="submit" value="На главную" style="width:auto; margin:5px"
                                   formaction="/dashboard" formmethod="get" />
                                <input class="button" type="submit" value="Выйти из аккаунта" 
                                    style="width:auto; margin:5px"/>
                            </form>
                        </div>
                    </div>
                    @if (!String.IsNullOrEmpty(Model.Message))
                    {
                        <label class="text-black text-center isError">@Model?.Message</label>
                    }
            }
        </div>
    </div>
   
</div>
