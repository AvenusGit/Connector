                        {
                            <div class="col">
                                <label class="text text-center fst-italic">Нет доступа</label>
                            </div>
                        }

                    </div>
                        <!--all system-->
                        <div class="row d-flex justify-content-center" style="margin:2vh;">
                            <div class="col">

                            </div>
                            <div class="col-auto">
                                <form>
                                    <button class="button" formaction="\export\AllSettings" formmethod="get">Экспорт всех настроек</button>
                                </form>
                            </div>                            
                            <div class="col">
                            </div>
                        </div>
                </div>
                </div>
            </div>
        </div>
    </div>
