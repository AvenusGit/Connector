                    </div>
                        <!--user access settings-->
                        <div class="row">
                        <div class="col">
                            <p class="text text-center">Настройки доступов (пользователь)</p>
                        </div>
                        @if (Model.UserRole == AppUser.AppRoles.Administrator)
                        {
                            <div class="col">
                                <div class="row">
                                    <div class="col-md-auto">
                                        <form enctype="multipart/form-data" action="\import\UserAccessSettings" method="post">
                                            <div>
                                                <input type="file" id="uploader_uas" name="file" onchange="this.form.submit()" hidden />
